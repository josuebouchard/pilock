{% extends "base.jinja" %}
{% block title %}Tags{% endblock title %}
{% block body %}
<div class="mx-auto container">

    <div class="flex justify-between">
        <div class="my-4">
            <h1 class="text-4xl font-bold">Tags</h1>
        </div>

        <div class="flex items-center">
            <a href="{{url_for('tags:create-ui')}}"
                class="bg-purple-500 px-3 py-2 rounded-xl text-neutral-50 font-bold">
                + Create new tag
            </a>
        </div>
    </div>

    {# Card #}
    <div class="bg-neutral-50 rounded-md shadow-md overflow-hidden">
        {# Table #}
        <table class="w-full">
            {# Header #}
            <thead class="font-bold bg-purple-500 text-neutral-50">
                <tr>
                    <th class="py-1 px-4 text-left">Organization ID</th>
                    <th class="py-1 px-4 text-left">Last Name</th>
                    <th class="py-1 pr-4 text-left">First Name</th>
                    <th class="py-1 pr-4 text-left">Tag UID</th>
                    <th class="py-1 pr-10 text-left w-px">Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for tag in tags %}
                <tr class="even:bg-[oklch(94.6%_0_0)]">
                    <td class="py-1 pl-4">{{tag.org_id}}</td>
                    <td>{{tag.last_name}}</td>
                    <td>{{tag.first_name}}</td>
                    <td>{{tag.tag_uid}}</td>
                    <td class="pr-4">
                        <a href="{{url_for('tags:edit-ui', tag_id=tag.id)}}"
                            class="text-blue-600 hover:text-blue-800 hover:underline">Edit</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock body %}